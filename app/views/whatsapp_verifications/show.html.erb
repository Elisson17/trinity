<div class="bg-white rounded-2xl shadow-xl overflow-hidden max-w-md mx-auto mt-8">
  <div class="px-8 py-12">
    <div class="text-center mb-8">
      <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Verificar WhatsApp</h1>
      <p class="text-gray-600">Enviamos um código de 6 dígitos para</p>
      <p class="text-gray-900 font-medium"><%= current_user.formatted_phone_number %></p>
    </div>

    <%= form_with url: whatsapp_verification_path, method: :post, local: true, class: "space-y-6" do |f| %>
      <% if flash[:alert] %>
        <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
          <p class="text-red-800 text-sm"><%= flash[:alert] %></p>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="p-4 bg-green-50 border border-green-200 rounded-lg">
          <p class="text-green-800 text-sm"><%= flash[:notice] %></p>
        </div>
      <% end %>

      <div>
        <%= f.label :verification_code, "Código de verificação", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :verification_code, 
            autofocus: true, 
            maxlength: 6,
            autocomplete: "one-time-code",
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors text-center text-2xl font-mono tracking-widest",
            placeholder: "000000",
            id: "verification_code" %>
        <p class="text-xs text-gray-500 mt-1">Digite os 6 dígitos recebidos no WhatsApp</p>
      </div>

      <div>
        <%= f.submit "Verificar código", 
            class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors",
            id: "verify_button" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600 mb-2">Não recebeu o código?</p>
      <%= link_to resend_whatsapp_verification_path, method: :post, 
          class: "text-sm font-medium text-blue-600 hover:text-blue-500" do %>
        Reenviar código
      <% end %>
      <p class="text-xs text-gray-500 mt-2">O código expira em 15 minutos</p>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const codeField = document.getElementById('verification_code');
    const verifyButton = document.getElementById('verify_button');
    
    // Auto-submit quando 6 dígitos forem inseridos
    codeField.addEventListener('input', function(e) {
      // Remove caracteres não numéricos
      e.target.value = e.target.value.replace(/\D/g, '');
      
      if (e.target.value.length === 6) {
        verifyButton.disabled = false;
        // Auto-submit após pequeno delay
        setTimeout(() => {
          if (codeField.value.length === 6) {
            verifyButton.click();
          }
        }, 500);
      } else {
        verifyButton.disabled = true;
      }
    });
    
    // Desabilita botão inicialmente
    verifyButton.disabled = true;
    
    // Focus no campo ao carregar
    codeField.focus();
  });
</script>
