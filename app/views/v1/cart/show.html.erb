<div class="container mx-auto px-4 py-8" data-controller="cart">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Carrinho de Compras</h1>
    <% if @cart_items.any? %>
      <button data-action="click->cart#clearCart"
              class="px-4 py-2 border border-red-300 text-red-600 rounded-lg hover:bg-red-50 transition-colors text-sm">
        Limpar Carrinho
      </button>
    <% end %>
  </div>

  <% if @cart_items.empty? %>
    <div class="text-center py-16">
      <svg class="mx-auto h-16 w-16 text-gray-400 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m-2.4 0L1 1M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17M17 13v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6"></path>
      </svg>
      <h3 class="text-xl font-medium text-gray-900 mb-2">Seu carrinho está vazio</h3>
      <p class="text-gray-500 mb-8">Adicione produtos incríveis ao seu carrinho para começar suas compras!</p>
      <%= link_to v1_products_path, 
          class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors" do %>
        Explorar Produtos
      <% end %>
    </div>
  <% else %>
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2 space-y-4">
        <% @cart_items.each do |item| %>
          <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm" data-cart-item-id="<%= item.product.id %>">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <div class="w-20 h-20 bg-gray-100 rounded-lg overflow-hidden">
                  <% if item.product.has_images? %>
                    <%= image_tag item.product.main_image, 
                        class: "w-full h-full object-cover",
                        alt: item.product.name %>
                  <% else %>
                    <div class="w-full h-full flex items-center justify-center">
                      <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                      </svg>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-medium text-gray-900 truncate">
                  <%= link_to item.product.name, v1_product_path(item.product), 
                      class: "hover:text-blue-600 transition-colors" %>
                </h3>
                <p class="text-sm text-gray-500 mt-1">SKU: <%= item.product.sku %></p>
                <p class="text-lg font-semibold text-green-600 mt-2">
                  <%= item.formatted_unit_price %> cada
                </p>
              </div>

              <div class="flex items-center space-x-3">
                <div class="flex items-center border border-gray-300 rounded-lg">
                  <button data-action="click->cart#decreaseQuantity" 
                          data-product-id="<%= item.product.id %>"
                          class="p-2 hover:bg-gray-100 transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                    </svg>
                  </button>
                  
                  <input type="number" 
                         value="<%= item.quantity %>" 
                         min="1" 
                         max="99"
                         data-product-id="<%= item.product.id %>"
                         data-action="change->cart#updateQuantity"
                         class="w-16 text-center border-0 focus:ring-0 py-2 text-sm">
                  
                  <button data-action="click->cart#increaseQuantity" 
                          data-product-id="<%= item.product.id %>"
                          class="p-2 hover:bg-gray-100 transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                  </button>
                </div>

                <div class="text-lg font-semibold text-gray-900 min-w-20" data-cart-subtotal>
                  <%= item.formatted_subtotal %>
                </div>

                <button data-action="click->cart#removeItem" 
                        data-product-id="<%= item.product.id %>"
                        class="p-2 text-red-500 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                </button>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="lg:col-span-1">
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 sticky top-8">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Resumo do Pedido</h2>
          
          <div class="space-y-3 mb-6">
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Produtos (<span data-cart-items-count><%= current_cart.total_items %></span>)</span>
              <span data-cart-total><%= current_cart.formatted_total_price %></span>
            </div>
            
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Frete</span>
              <span class="text-green-600">Grátis</span>
            </div>
            
            <hr class="border-gray-200">
            
            <div class="flex justify-between text-lg font-semibold">
              <span>Total</span>
              <span data-cart-total><%= current_cart.formatted_total_price %></span>
            </div>
          </div>

          <button class="w-full bg-green-600 text-white py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors mb-3">
            Finalizar Compra
          </button>

          <div class="text-center">
            <%= link_to v1_products_path, 
                class: "text-blue-600 hover:text-blue-500 text-sm font-medium" do %>
              Continuar Comprando
            <% end %>
          </div>

          <div class="mt-6 p-4 bg-blue-50 rounded-lg">
            <h4 class="font-medium text-blue-900 mb-2">Garantias</h4>
            <ul class="text-sm text-blue-800 space-y-1">
              <li>✓ Frete grátis para compras acima de R$ 99</li>
              <li>✓ Troca grátis em até 30 dias</li>
              <li>✓ Pagamento 100% seguro</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div id="cart-toast" class="fixed top-4 right-4 z-50 hidden">
  <div class="bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg">
    <div class="flex items-center">
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
      <span id="toast-message">Produto adicionado ao carrinho!</span>
    </div>
  </div>
</div>
