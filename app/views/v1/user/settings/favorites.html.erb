<div class="p-6">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Meus Favoritos</h1>
  </div>

  <% if @favorites.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhum favorito ainda</h3>
      <p class="text-gray-500 mb-6">Adicione produtos aos seus favoritos para encontrá-los facilmente mais tarde.</p>
      <%= link_to v1_products_path, 
          class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 transition-colors" do %>
        Explorar produtos
      <% end %>
    </div>
  <% else %>
    <!-- TODO: Implementar listagem de favoritos quando tiver o modelo Favorite -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Produto exemplo -->
      <div class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-md transition-shadow">
        <div class="aspect-w-1 aspect-h-1 bg-gray-200">
          <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
            <span class="text-gray-400">Sem imagem</span>
          </div>
        </div>
        <div class="p-4">
          <h3 class="font-medium text-gray-900 mb-1">Produto Exemplo</h3>
          <p class="text-sm text-gray-500 mb-2">Descrição do produto...</p>
          <div class="flex items-center justify-between">
            <span class="text-lg font-bold text-gray-900">R$ 89,90</span>
            <button class="text-red-500 hover:text-red-600 transition-colors">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
              </svg>
            </button>
          </div>
          <div class="mt-3 flex space-x-2">
            <button class="flex-1 bg-blue-600 text-white text-sm font-medium py-2 px-3 rounded-md hover:bg-blue-700 transition-colors">
              Ver produto
            </button>
            <button class="px-3 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-md hover:bg-gray-50 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m-2.4 0L1 1M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17M17 13v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
