<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div class="flex items-center space-x-2 text-sm text-gray-500">
      <%= link_to admin_products_path, class: "hover:text-gray-700" do %>
        Produtos
      <% end %>
      <span>/</span>
      <span class="text-gray-900"><%= @product.name %></span>
    </div>
    
    <div class="flex space-x-2">
      <%= link_to edit_admin_product_path(@product), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        <%= icon "pencil", class: "w-4 h-4 mr-1" %>
        Editar
      <% end %>
      
      <%= link_to admin_product_path(@product), method: :delete, data: { confirm: "Tem certeza que deseja remover este produto?" }, class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
        <%= icon "trash-2", class: "w-4 h-4 mr-1" %>
        Remover
      <% end %>
    </div>
  </div>

  <!-- Conteúdo Principal -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
      <h1 class="text-lg leading-6 font-medium text-gray-900"><%= @product.name %></h1>
      <p class="mt-1 max-w-2xl text-sm text-gray-500">Detalhes do produto</p>
    </div>
    
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Nome</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.name %></dd>
        </div>
        
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Descrição</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.description %></dd>
        </div>
        
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Preço</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.formatted_price %></dd>
        </div>
        
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">SKU</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.sku %></dd>
        </div>
        
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 sm:mt-0 sm:col-span-2">
            <% if @product.active? %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                Ativo
              </span>
            <% else %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                Inativo
              </span>
            <% end %>
            <% if @product.featured? %>
              <span class="ml-2 inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                Em Destaque
              </span>
            <% end %>
          </dd>
        </div>
        
        <% if @product.material.present? %>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Material</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.material %></dd>
          </div>
        <% end %>
        
        <% if @product.care_instructions.present? %>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Instruções de Cuidado</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @product.care_instructions %></dd>
          </div>
        <% end %>
        
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Criado em</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= l(@product.created_at, format: :long) %></dd>
        </div>
        
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Atualizado em</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= l(@product.updated_at, format: :long) %></dd>
        </div>
        
        <% if @product.has_images? %>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Imagens</dt>
            <dd class="mt-1 sm:mt-0 sm:col-span-2">
              <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-4">
                <% @product.images.each do |image| %>
                  <div class="relative group">
                    <%= image_tag image, class: "h-24 w-full object-cover rounded-lg" %>
                  </div>
                <% end %>
              </div>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>
</div>
