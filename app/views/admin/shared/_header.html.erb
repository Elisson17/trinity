<header class="bg-white shadow-sm border-b border-gray-200 h-16 flex items-center justify-between px-6">
  <div class="flex items-center space-x-4">
    <button id="sidebar-toggle" class="p-2 rounded-lg hover:bg-gray-100 transition-colors">
      <span class="toggle-icon">
        <%= icon "chevron-right", class: "w-5 h-5 text-gray-600" %>
      </span>
    </button>
    
    <div class="flex items-center space-x-2">
      <h1 class="text-xl font-bold text-gray-800">Trinity</h1>
      <span class="bg-red-500 text-white px-2 py-1 rounded-full text-xs font-semibold">ADMIN</span>
    </div>
  </div>

  <div class="flex items-center space-x-4">
    <%= link_to v1_root_path, class: "flex items-center space-x-2 bg-gray-100 hover:bg-gray-200 px-4 py-2 rounded-lg transition-colors" do %>
      <%= icon "external-link", class: "w-4 h-4 text-gray-600" %>
      <span class="text-sm font-medium text-gray-700">Ver Site</span>
    <% end %>

    <%= button_to destroy_user_session_path, method: :delete, class: "flex items-center space-x-2 bg-red-500 hover:bg-red-600 px-4 py-2 rounded-lg transition-colors text-white" do %>
      <%= icon "log-out", class: "w-4 h-4" %>
      <span class="text-sm font-medium">Sair</span>
    <% end %>
  </div>
</header>
