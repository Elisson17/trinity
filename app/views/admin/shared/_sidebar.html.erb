<aside id="admin-sidebar" class="bg-gray-900 text-white w-[76px] transition-all duration-300 ease-in-out flex-shrink-0 fixed h-full z-10">
  <div class="p-4">
    <div class="flex items-center justify-center h-8 mb-8">
      <div class="w-8 h-8 bg-pink-500 rounded-lg flex items-center justify-center">
        <span class="text-white font-bold text-sm">T</span>
      </div>
    </div>

    <nav class="space-y-2">
      <%= link_to admin_root_path, class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition-colors #{'bg-gray-800' if current_page?(admin_root_path) || current_page?(admin_dashboard_path)}" do %>
        <%= icon "layout-dashboard", class: "w-5 h-5 flex-shrink-0" %>
        <span class="sidebar-text hidden font-medium">Dashboard</span>
      <% end %>

      <%= link_to admin_products_path, class: "flex items-center space-x-3 p-3 rounded-lg hover:bg-gray-800 transition-colors #{'bg-gray-800' if current_page?(admin_products_path) || controller_name == 'products'}" do %>
        <%= icon "package", class: "w-5 h-5 flex-shrink-0" %>
        <span class="sidebar-text hidden font-medium">Produtos</span>
      <% end %>
    </nav>
  </div>

  <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-gray-700">
    <div class="flex items-center space-x-3">
      <div class="w-8 h-8 bg-gray-600 rounded-full flex items-center justify-center flex-shrink-0">
        <%= icon "user", class: "w-4 h-4" %>
      </div>
      <div class="sidebar-text hidden">
        <p class="text-sm font-medium"><%= current_user.name %></p>
        <p class="text-xs text-gray-400">Administrador</p>
      </div>
    </div>
  </div>
</aside>
